<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Imagen grande del personaje -->
    <ImageView
        android:id="@+id/imagen_personaje"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/mario_image" />

    <!-- Nombre del personaje -->
    <TextView
        android:id="@+id/nombre_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagen_personaje"
        android:layout_centerHorizontal="true"
        android:text="Mario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Descripción del personaje -->
    <TextView
        android:id="@+id/descripcion_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_personaje"
        android:layout_centerHorizontal="true"
        android:text="Héroe del Reino Champiñón"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Habilidades del personaje -->
    <TextView
        android:id="@+id/habilidades_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descripcion_personaje"
        android:layout_centerHorizontal="true"
        android:text="Salta alto\nHéroe del Reino Champiñón"
        android:textSize="16sp" />
</RelativeLayout>
